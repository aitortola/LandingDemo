<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5">

            <Button
                android:id="@+id/buttonLive"
                style="@style/BotonesTextoBlancoLanding"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/landing_celda1"
                android:foregroundTint="@color/azul_barra_tutorial"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <com.aitortola.landingdemo.AutoResizeTextView
                android:id="@+id/textButtonLive"
                style="@style/BotonesTextoBlancoLanding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="20sp"
                android:elevation="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Prueba Texto"
                android:textSize="27dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>