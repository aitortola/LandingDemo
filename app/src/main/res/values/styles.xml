<resources>

    <style name="Widget.Theme.LandingDemo.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.LandingDemo.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>


    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>


    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">45dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="AnimacionEntreActividades.Activity" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>


    <style name="AnimacionParaAlertDialogLoading.Activity" parent="@android:style/Animation">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/negro_mas_claro</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="Theme.MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Theme.CustomTranslucent" parent="android:style/Theme.Translucent">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Preference.Checkbox" parent="android:Widget.CompoundButton.CheckBox">
    </style>


    <style name="theme.AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/gris_alert_dialog_button</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="theme.AlertDialogLoading" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimacionParaAlertDialogLoading.Activity
        </item>
    </style>


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="BotonesTextoBlancoLanding">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="BotonesTextoNegroLanding">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>


</resources>